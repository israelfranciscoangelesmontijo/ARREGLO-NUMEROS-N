#include<stdio.h>
void imprime(int n);
void regreso(int n);
int main(void)
{
int n;
printf("INDICA EL NUMERO");
scanf("%d",&n);
imprime(n);
regreso(n);
return 0;	
}
void imprime(int n)
{
int i,j;
for (i=1;i<=n;i++)
{
for (j=0;j<i;j++){
printf("%d\t",j+1);
}
printf("\n");	
}
}
void regreso(int n){
int i,j;
for (i=n-1;i>=0;i--){
for (j=0;j<i;j++){
printf("%d\t",j+1);	
}	
}	
}
